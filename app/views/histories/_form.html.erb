<% form_for [@user, @history] do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :start %><br />
    <%= f.date_select :start %>
  </p>
  <p>
    <%= f.label :end %><br />
    <%= f.date_select :end %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :cols => 100 %>
  </p>
  <p>
    <%= f.label :equipment %><br />
    <%= f.text_area :equipment, :cols => 100 %>
  </p>
  <p>
    <%= f.label :company %><br />
    <%= f.text_field :company, :size => 70 %>
  </p>
  <p>
    <%= f.label :position %><br />
    <%= f.text_field :position, :size => 70 %>
  </p>
  <p>
    <%= f.submit 'Create this work history' %>
  </p>
<% end %>
