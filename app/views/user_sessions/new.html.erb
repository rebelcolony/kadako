<div class="content_container">
	<h2>Login and we'll send you right along</h2>
<% form_for(@user_session) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.submit 'Log in' %>
  </p>

	<%= link_to "Forgot Password", new_password_reset_path %>
<% end %>
<!-- END .content_container --></div>