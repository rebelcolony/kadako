<div class="content_container">
	<div id="login_container">
	<h2>Login and we'll send you right along</h2>
	<div class="sign_up_help">
		Login here to access your online employment profile.
	</div>	
	<div id="login_form">
		<% form_for(@user_session) do |f| %>
  		<%= f.error_messages %>
  		<p>
    		<%= f.label :email %><br />
    		<%= f.text_field :email %>
  		</p>
  		<p>
    		<%= f.label :password %><br />
    		<%= f.password_field :password %>
  		</p>
  		<p>
    		<%= f.submit 'Log in' %>
  		</p>
			<%= link_to "Forgot Password", new_password_reset_path %>
		<% end %>
	</div>
<!-- END #login_container --></div>
<!-- END .content_container --></div>