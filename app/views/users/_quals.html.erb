<h2 class="h2header">Qualifications</h2>
		<table id="user_quals_table", cellspacing="1", border="0", width="890px">
		<% for qualification in @user.qualifications %>
			<tr class="<%= cycle('list-line-odd', 'list-line-even') %>">
				<td width=90><h3 class="user_qual_box_body_header"><%= qualification.body.name %></h3></td>
				<td width=50><h3 class="user_qual_box_level_header"><%= qualification.level.level %></h3></td>
				<td width=280><h3 class="user_qual_box_tech_header"><%= qualification.technique.name %></h3></td>
				<td width=200><h3 class="user_qual_box_tech_header"><%= qualification.category.name %></h3></td>
				<td width=100><h3 class="user_qual_box_tech_header"><%= qualification.expire_date %></h3></td>
				<td width=80>
				<% if qualification.cert.exists? %>
					<%= link_to image_tag(qualification.cert.url(:thumb)), qualification.cert.url(:medium), :class => "top_up", :border => nil %>
				<% end -%>	
				</td>
				<td><span class="admin_links"><%= link_to 'Edit', edit_user_qualification_path(@user, qualification) %> 
				<%= link_to 'Destroy', [@user, qualification], :method => :delete, :confirm => "Are you sure?" %></td>
			</tr>			
		<% end -%>
		</table>	